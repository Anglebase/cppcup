{
  "name": "cppcup",
  "displayName": "Cup",
  "description": "VSCode supports the new C/C++ Project&Package Manager Cup.",
  "version": "0.0.3",
  "repository": {
    "url": "https://github.com/Anglebase/cppcup.git"
  },
  "keywords": [
    "cpp",
    "c++",
    "c",
    "cup",
    "cppcup"
  ],
  "publisher": "Anglebase",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:cup.toml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cppcup.build",
        "title": "Build",
        "icon": "$(project)"
      },
      {
        "command": "cppcup.release",
        "title": "Build with Release",
        "icon": "$(package)"
      },
      {
        "command": "cppcup.debug",
        "title": "Run with Debug",
        "icon": "$(debug-alt)"
      },
      {
        "command": "cppcup.run",
        "title": "Run",
        "icon": "$(run)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "cppcup.buildable",
          "command": "cppcup.build",
          "group": "navigation"
        },
        {
          "when": "cppcup.buildable",
          "command": "cppcup.release",
          "group": "navigation"
        },
        {
          "when": "cppcup.runable",
          "command": "cppcup.run",
          "group": "navigation"
        },
        {
          "when": "cppcup.runable",
          "command": "cppcup.debug",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "when": "true",
          "command": "cppcup.build",
          "group": "cppcup"
        },
        {
          "when": "true",
          "command": "cppcup.release",
          "group": "cppcup"
        },
        {
          "when": "true",
          "command": "cppcup.run",
          "group": "cppcup"
        },
        {
          "when": "true",
          "command": "cppcup.debug",
          "group": "cppcup"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5"
  }
}